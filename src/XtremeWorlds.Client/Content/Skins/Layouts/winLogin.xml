<?xml version="1.0" encoding="utf-8"?>
<Window Name="winLogin" Caption="Login" Size="280, 250" Icon="45" IconOffset="3, 5" StartPosition="CenterScreen">
    <PictureBox Position="5, 25" Size="270, 220" Style="Parchment"/>

    <!-- Username Input -->
    <Label Text="Username" Position="60, 35" Size="160, 15" Align="Center"/>
    <TextBox Name="txtUsername" Position="60, 55" Size="160, 25"/>

    <!-- Password Input -->
    <Label Text="Password" Position="60, 85" Size="160, 15" Align="Center"/>
    <TextBox Name="txtPassword" Position="60, 105" Size="160, 25" Censor="True"/>

    <!-- Save Username -->
    <CheckBox Name="chkSaveUsername" Text="Save Username?" Position="60, 140" Size="160, 15"/>

    <!-- Buttons -->
    <Button Name="btnAccept" Text="Accept" Position="60, 165" Size="75, 25"/>
    <Button Name="btnExit" Text="Exit" Position="145, 165" Size="75, 25" Style="ButtonRed"/>
    <Button Name="btnRegister" Text="Register Account" Position="15, -40" Size="250, 25"/>

    <Button Name="btnClose" Position="-20, 6" Size="16, 16" Style="ButtonClose"/>
</Window>
